<%= form_for(@payment) do |f| %>
  <% if @payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
      <% @payment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :contract_id %><br>
    <%=f.select :contract_id, options_for_select(Contract.where('user_id = ? OR tenant_id = ?',current_user.id,current_user.id).map{ |s| [s.property.name, s.id] }), prompt: "Select Contract"%>
    <%#= f.collection_select :contract_id, Contract.where('user_id = ? OR tenant_id = ?',current_user.id,current_user.id), :id, :id.properties.pluck(:name), prompt: "Select Contract" %>
  </div>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.number_field :amount %>
  </div>
  <div class="field">
    <%= f.label :payment_description %><br>
    <%= f.collection_select :payment_description, PaymentDescription.all, :id, :display_info, prompt: "Select Payment Description" %>
  </div>
  <div class="field">
    <%= f.label :payment_option %><br>
    <%= f.collection_select :payment_option,PaymentOption.all, :id, :name, prompt: "Select Payment Option" %>
  </div>
  <div class="field">
    <%= f.label :reference_number %><br>
    <%= f.text_field :reference_number %>
  </div>
  <div class="field">
    <%= f.label :payment_date %><br>
    <%= f.date_select :payment_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
