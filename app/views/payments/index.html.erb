<div class="row">
<div class="page-header">
<h2>Payments 
<div class="pull-right">
<%= link_to 'New Payment', new_payment_path, class: "btn btn-primary" %>
</div> <!-- button ends -->
</h2>
</div><!-- pageheader ends -->
</div> <!-- row ends -->
<hr>

<div class="row">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Sl No</th>
      <th>Property Name</th>
      <th>Amount</th>
      <th>Description</th>
      <th>Option</th>
      <th>Reference number</th>
      <th>Date of Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%@contracts.each do |contract|%>
    <% contract.payments.each_with_index do |payment,index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= payment.contract.property.name %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.payment_description.display_info%></td>
        <td><%= payment.payment_option.name%></td>
        <td><%= payment.reference_number %></td>
        <td><%= payment.payment_date %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <%end%>
  </tbody>
</table>
</div> <!-- row of table ends -->

<br>


