<p id="notice"><%= notice %></p>

<h1>Listing Payments</h1>

<table>
  <thead>
    <tr>
      <th>Contract</th>
      <th>Amount</th>
      <th>Payment Description</th>
      <th>Payment Option</th>
      <th>Reference number</th>
      <th>Payment date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.contract_id %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.payment_description.try(:payment_type)%></td>
        <td><%= payment.payment_option.name%></td>
        <td><%= payment.reference_number %></td>
        <td><%= payment.payment_date %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

