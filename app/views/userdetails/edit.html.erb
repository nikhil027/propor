<h2>Add Further datails</h2>

<%= form_for @userdetail do |f|%>

	<%=f.label :name%><br>
	<%=f.text_field :name%><br>

	<%=f.label :mobile%><br>
	<%=f.text_field :mobile%><br>

	<%=f.label :email%><br>
	<%=f.email_field :email%><br>

	<%=f.label :date_of_birth%><br>
	<%=f.date_select :date_of_birth%><br>

	<%=f.label :pan_no%><br>
	<%=f.text_field :pan_no%><br>

	<%=f.label :profile_picture%><br>
	<%=f.file_field :profile_picture%><br>

	<%=f.label :id_proof%><br>
	<%=f.file_field :id_proof%><br>

	<%=f.submit "Add my details"%><br>

<%end%>	