<div class="row">
<div class="page-header">
<h2>Tasks
<div class="pull-right">
<%= link_to 'Add New Task', new_task_path, class: "btn btn-primary" %>
</div> <!-- button ends -->
</h2>
</div><!-- pageheader ends -->
</div> <!-- row ends -->
<hr>

<div class="row">
<%if !@tasks.nil?%>
<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Sl No</th>
			<th>Title</th>
			<th>Task Type</th>
			<th>Task Category</th>
			<th>Property Name</th>
			<th>Task Due Date</th>
			<th>Status </th>
			<th>Priority </th>
			<th>Show Task</th>
			<th>Edit Task</th>
			<th>Delete Task</th>

		</tr>
	</thead>
	<tbody>
		
			<% @tasks.each_with_index do |task,index|%>
		<tr>
			<td><%=index + 1%></td>
			<td><%=task.title%></td>
			<td><%=task.task_type.try(:name)%></td>
			<td><%=task.task_category.try(:name)%></td>
			<td><%=task.property.name%></td>
			<td><%=task.due_date%></td>
			<td><%=task.status%></td>
			<td><%=task.priority%></td>
			<td><%=link_to task_path(task.id),class:"btn btn-info" do%>Show
				<span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
				<%end%>
			</td>
			<td><%=link_to edit_task_path(task.id),class:"btn btn-warning" do%>Edit
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
				<%end%>
			</td>
			<td><%=link_to task_path(task.id), method: :delete, data: {confirm: "Are you sure ???"},class: "btn btn-danger" do%> Delete
				<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
			<%end%>
			</td>
		</tr>
		<%end%>
		
	</tbody>
</table>
</div>
</div> <!-- table row ends -->
<%end%>