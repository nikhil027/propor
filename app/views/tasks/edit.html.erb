<h3>Update Task Details</h3>

<%=form_for @task do |f|%>

	<%=f.label :task_type%><br>
	<%=f.select :task_type, ["to-do","resident request","owner request","contact request"], prompt:"Select Task Type"%><br>

	<%=f.label :title%><br>
	<%=f.text_field :title%><br>

	<%=f.label :description%><br>
	<%=f.text_area :description%><br>

	<%=f.label :category%><br>
	<%=f.select :category, ["Complaint","Feedback","Suggestion","Genral Inquiry","Maintainance Request","other"], prompt:"Select Task Category"%><br>

	<%=f.label :property_id%><br>
	<%=f.collection_select :property_id, Property.all, :id, :name, prompt: "Select Property" %><br>

	<%=f.hidden_field :user_id, value: current_user.id%><br>

	<%=f.label :due_date%><br>
	<%=f.date_select :due_date%><br>

	<%=f.label :status%><br>
	<%=f.select :status, ["New","On-Going","Completed","Deffered"], prompt: "Select Status"%><br>

	<%=f.label :priority%><br>
	<%=f.select :priority, ["Low","Normal","High"], prompt:"Select Priority"%><br>

	<%=f.submit%>

<%end%>