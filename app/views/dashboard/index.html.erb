<div class="row">
<div class="page-header">
<h1>Dashboard</h1><br>
<h2>Upcoming Tasks </h2>
</div><!-- pageheader ends -->
</div> <!-- row ends -->
<hr>

<div class="row">
<%if !@tasks.nil?%>
<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Sl No</th>
			<th>Title</th>
			<th>Task Type</th>
			<th>Task Category</th>
			<th>Property Name</th>
			<th>Task Due Date</th>
			<th>Status </th>
			<th>Priority </th>
		</tr>
	</thead>
	<tbody>
		
			<% @tasks.each_with_index do |task,index|%>
		<tr>
			<td><%=index + 1%></td>
			<td><%=task.title%></td>
			<td><%=task.task_type.try(:name)%></td>
			<td><%=task.task_category.try(:name)%></td>
			<td><%=task.property.name%></td>
			<td><%=task.due_date%></td>
			<td><%=task.status%></td>
			<td><%=task.priority%></td>
		</tr>
		<%end%>
		
	</tbody>
</table>
</div>


<div id="calendar">



</div>

</div> <!-- table row ends -->
<%end%>

<%= render 'js'%>