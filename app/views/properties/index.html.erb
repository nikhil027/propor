<div class="row">
<div class="page-header">
<h2>Properties
<div class="pull-right">
<%= link_to 'Add New Property', new_property_path, class: "btn btn-primary" %>
</div> <!-- button ends -->
</h2>
</div><!-- pageheader ends -->
</div> <!-- row ends -->
<hr>

<div class="row">
<%if !@properties.nil?%>
<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Sl No</th>
			<th>Property Name</th>
			<th>Built Up Area</th>
			<th>Is Available?</th>
			<th>Address </th>
			<th>View Details </th>
			<th>Edit Details </th>
			<th>Remove Property </th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<% @properties.each_with_index do |property,index|%>
		<tr>
			<td><%=index + 1%></td>
			<td><%=property.name%></td>
			<td><%=property.built_up_area%></td>
			<td><%=property.is_available%></td>
			<td><%=property.address%></td>
			<td><%=link_to property_path(property.id),class:"btn btn-info" do%>Show
				<span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
				<%end%>
			</td>
			<td><%=link_to edit_property_path(property.id),class:"btn btn-warning" do%>Edit
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
				<%end%>
			</td>
			<td><%=link_to property_path(property.id), method: :delete, data: {confirm: "Are you sure ???"},class: "btn btn-danger" do%> Delete
				<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
			<%end%>
			</td>
		</tr>
		<%end%>
		</tr>
	</tbody>
</table>
</div>
</div> <!-- table row ends -->
<%end%>