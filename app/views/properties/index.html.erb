<h2>Listing Properties of <%=current_user.email%></h2>

<h3><%=link_to "Add New Property",new_property_path%></h3>


<table border="1">
	<thead>
		<tr>
			<th>Sl No</th>
			<th>Property Name</th>
			<th>Built Up Area</th>
			<th>Is Available?</th>
			<th>Address </th>
			<th>View Details </th>
			<th>Edit Details </th>
			<th>Remove Property </th>
		</tr>
	</thead>
	<tbody>
		<% @properties.each_with_index do |property,index|%>
		<tr>
			<td><%=index + 1%></td>
			<td><%=property.name%></td>
			<td><%=property.built_up_area%></td>
			<td><%=property.is_available%></td>
			<td><%=property.address%></td>
			<td><%=link_to "Show", property_path(property.id)%></td>
			<td><%=link_to "Edit", edit_property_path(property.id)%></td>
			<td><%=link_to "Destroy", property_path(property.id), method: :delete, data: {confirm: "Are you sure ???"}%></td>
		</tr>
		<%end%>
	</tbody>
</table>