<%= form_for @contract do |f|%>
	
	<div class="form-group">	
	<%=f.label :property_id%>
	<%=f.collection_select :property_id , Property.where('owner_id = ?',current_user.id), :id, :name, {prompt:"Select Property"},{class:"form-control"}%>
	</div>

	<div class="form-group">
    <%= f.label :tenant_id %>
    <%=f.select :tenant_id, options_for_select(User.where('created_by = ?',current_user.id).map{ |s| [s.userdetail.name, s.id] }), {prompt: "Select Tenant"},{class:"form-control"}%>
  	</div>
	
	<div class="form-group">
	<%=f.label :start_date%>
	<%=f.text_field :start_date,class:"form-control", id:"startDate"%>
	</div>

	<div class="form-group">
	<%=f.label :end_date%>
	<%=f.text_field :end_date,class:"form-control", id:"endDate"%>
	</div>

	<div class="form-group">
	<%= f.label :document %>
	<%=f.file_field :document %>
	</div>

	
	<%=f.submit "Create Contract", class:"btn btn-success"%>
	


<%end%>	

<%= render 'js' %>