<div class="row">
<div class="page-header">
<h2>Contracts 
<div class="pull-right">
<%= link_to 'New Contract', new_payment_path, class: "btn btn-primary" %>
</div> <!-- button ends -->
</h2>
</div><!-- pageheader ends -->
</div> <!-- row ends -->
<hr>
<div class="row"> 
<div class="panel panel-default">
  <!-- Default panel contents -->
  <%if !@contracts.nil?%>
  <!-- Table -->
 
  <table class="table table-bordered table-hover">
  	<thead>
		<tr>
			<th>Sl No</th>
			<th>Property Name</th>
			<th>Owner Name</th>
			<th>Tenant Name</th>
			<th>Start Date </th>
			<th>End Date </th>
			<th>View Details </th>
			<th>Edit Details </th>
			<th>Terminate Contract </th>
		</tr>
	</thead>
	<tbody>
		<% @contracts.each_with_index do |contract,index|%>
		<tr>
			<td><%=index + 1%></td>
			<td><%=contract.property.name%></td>
			<td><%=contract.user.userdetail.name%></td>
			<td><%=contract.tenant.email%></td>
			<td><%=contract.start_date%></td>
			<td><%=contract.end_date%></td>
			<td><%=link_to "Show", contract_path(contract.id)%></td>
			<td><%=link_to "Edit", edit_contract_path(contract.id)%></td>
			<td><%=link_to "Destroy", contract_path(contract.id), method: :delete, data: {confirm: "Are you sure ???"}%><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></td>
		</tr>
		<%end%>
	</tbody>
  </table>
  </div> <!-- row of table ends -->
</div>






<%end%>