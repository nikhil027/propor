<h2>My Contracts</h2>

<h3><%=link_to "Add new contract", new_contract_path%></h3>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <%if !@contracts.nil?%>
  <!-- Table -->
  <table class="table">
  	<thead>
		<tr>
			<th>Sl No</th>
			<th>Property Name</th>
			<th>Owner Name</th>
			<th>Tenant Name</th>
			<th>Start Date </th>
			<th>End Date </th>
			<th>View Details </th>
			<th>Edit Details </th>
			<th>Terminate Contract </th>
		</tr>
	</thead>
	<tbody>
		<% @contracts.each_with_index do |contract,index|%>
		<tr>
			<td><%=index + 1%></td>
			<td><%=contract.property.name%></td>
			<td><%=contract.user.userdetail.name%></td>
			<td><%=contract.tenant.email%></td>
			<td><%=contract.start_date%></td>
			<td><%=contract.end_date%></td>
			<td><%=link_to "Show", contract_path(contract.id)%></td>
			<td><%=link_to "Edit", edit_contract_path(contract.id)%></td>
			<td><%=link_to "Destroy", contract_path(contract.id), method: :delete, data: {confirm: "Are you sure ???"}%></td>
		</tr>
		<%end%>
	</tbody>
  </table>
</div>





<%end%>